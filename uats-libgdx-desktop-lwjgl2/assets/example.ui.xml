<container xmlns:custom="my-custom-schema"
           xmlns="https://github.com/mini2Dx/mini2Dx"
           layout="flex-column:xs-12c">
    <tab-view>
        <tab title="Custom Component">
            <custom:player-label
                    name="Ace" texture-path="cardDiamondsA" atlas="texture-region-uat.atlas"/>
            <custom:player-label
                    name="King" texture-path="cardDiamondsK" atlas="texture-region-uat.atlas"/>
        </tab>
        <tab title="Character Generator">
            <flex-row>
                <label text="Name:"/>
                <text-box id="name"/>
            </flex-row>
            <flex-row>
                <flex-row layout="flex-row:xs-1c">
                    <label text="Race:" horizontal-alignment="RIGHT"/>
                </flex-row>
                <flex-row layout="flex-row:xs-1c"/>
                <flex-row layout="flex-row:xs-10c">
                    <select id="race">
                        <option value="HUMAN">Human</option>
                        <option value="DWARF">Dwarf</option>
                        <option value="ELF">Elf</option>
                        <option value="ORC">Orc</option>
                    </select>
                </flex-row>
            </flex-row>
            <flex-row>
                <flex-row layout="flex-row:xs-1c">
                    <label text="Age:" horizontal-alignment="RIGHT"/>
                </flex-row>
                <flex-row layout="flex-row:xs-1c"/>
                <flex-row layout="flex-row:xs-9c">
                    <slider id="ageModifier"/>
                </flex-row>
                <flex-row layout="flex-row:xs-1c">
                    <label text="" id="age"/>
                </flex-row>
            </flex-row>
            <flex-row>
                <flex-row layout="flex-row:xs-1c">
                    <label text="Class:"/>
                </flex-row>
                <flex-row layout="flex-row:xs-1c"/>
                <flex-row layout="flex-row:xs-10c">
                    <radio-button id="class" flex-direction="COLUMN">
                        <option>Barbarian</option>
                        <option>Wizard</option>
                        <option>Rogue</option>
                    </radio-button>
                </flex-row>
            </flex-row>
            <flex-row>
                <flex-row layout="flex-row:xs-1c">
                    <check-box id="goodOrEvil" checked="true"/>
                </flex-row>
                <flex-row layout="flex-row:xs-11c">
                    <label text="Good/Evil"/>
                </flex-row>
            </flex-row>
            <flex-row>
                <flex-row layout="flex-row:xs-1c">
                    <label text="Gender:"/>
                </flex-row>
                <flex-row layout="flex-row:xs-1c"/>
                <flex-row layout="flex-row:xs-10c">
                    <radio-button id="class" flex-direction="COLUMN">
                        <option>Female</option>
                        <option>Male</option>
                    </radio-button>
                </flex-row>
            </flex-row>
            <flex-row>
                <flex-row layout="flex-column:xs-2c">
                    <label text="Strength:"/>
                </flex-row>
                <flex-row layout="flex-row:xs-1c"/>
                <text-box id="strength" layout="flex-column:xs-1c"/>
                <flex-row layout="flex-row:xs-4c"/>
                <flex-row layout="flex-column:xs-2c">
                    <label text="Dexterity:"/>
                </flex-row>
                <flex-row layout="flex-row:xs-1c"/>
                <text-box id="dexterity" layout="flex-column:xs-1c"/>
            </flex-row>
            <flex-row>
                <flex-row layout="flex-column:xs-2c">
                    <label text="Intelligence:"/>
                </flex-row>
                <flex-row layout="flex-row:xs-1c"/>
                <text-box id="intelligence" layout="flex-column:xs-1c"/>
                <flex-row layout="flex-row:xs-4c"/>
                <flex-row layout="flex-column:xs-2c">
                    <label text="Wisdom:"/>
                </flex-row>
                <flex-row layout="flex-row:xs-1c"/>
                <text-box id="wisdom" layout="flex-column:xs-1c"/>
            </flex-row>
            <flex-row>
                <flex-row layout="flex-column:xs-2c">
                    <label text="Charisma:"/>
                </flex-row>
                <flex-row layout="flex-row:xs-1c"/>
                <text-box id="charisma" layout="flex-column:xs-1c"/>
                <flex-row layout="flex-row:xs-4c"/>
                <flex-row layout="flex-column:xs-2c">
                    <label text="Constitution:"/>
                </flex-row>
                <flex-row layout="flex-row:xs-1c"/>
                <text-box id="constitution" layout="flex-column:xs-1c"/>
            </flex-row>
            <flex-row/>
            <flex-row>
                <text-button id="create-character" text="Create"/>
                <progress-bar id="create-character-progress" visibility="HIDDEN"/>
            </flex-row>
        </tab>
        <tab title="Scroll">
            <scroll-box layout="flex-column:xs-12c" max-height="100">
                <label text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis libero orci, molestie
                in tincidunt consequat, euismod non leo. Phasellus viverra erat nec mi lobortis convallis.
                Nunc dictum massa ut augue sodales iaculis. In hac habitasse platea dictumst.
                Donec convallis dui ac maximus euismod. Proin bibendum metus lorem, in blandit felis
                volutpat nec. Donec imperdiet, nulla in faucibus fringilla, lorem orci vestibulum ipsum,
                faucibus semper eros erat nec ipsum. Curabitur eget velit id lectus suscipit iaculis sit amet
                non libero. Proin vitae fringilla velit. Vivamus neque neque, fringilla et porta a, efficitur
                eu metus. Morbi eu vulputate ipsum. Maecenas in risus ac nisl fermentum efficitur ac gravida mi.
                Vivamus a risus cursus eros pulvinar varius. Nunc mattis leo vel pulvinar facilisis.

                Proin finibus ullamcorper diam. Nulla sem sapien, aliquet sed odio faucibus, lacinia fringilla
                leo. Vivamus lacinia, lorem ut pulvinar dictum, urna neque mattis tortor, at accumsan diam ex et
                urna. Aenean ligula lorem, pretium non consequat ut, pellentesque in lectus. Morbi dapibus dolor
                neque, vitae mollis elit vehicula a. Mauris quis urna orci. Aenean tellus tellus, blandit id
                ultrices eget, malesuada sit amet nisi. Suspendisse potenti. Integer id aliquet metus.
                Vestibulum venenatis ipsum quis mi condimentum, vulputate pellentesque diam faucibus.
                Aenean imperdiet purus eros, nec placerat elit tempus eu. Duis augue erat, efficitur sed egestas
                nec, sollicitudin sed odio. Cras auctor, enim ut placerat cursus, orci mi eleifend eros, non
                hendrerit mi eros non sapien. Fusce at eros eros. Donec tortor nibh, luctus eget lorem non,
                tincidunt rhoncus tortor. Sed blandit, leo id tempor faucibus, diam nisl pharetra nisi,
                a egestas lorem lectus id velit."
                />
            </scroll-box>
        </tab>
        <tab title="Misc">
            <div layout="flex-column:xs-12c">
                <flex-row layout="flex-column:xs-12c">
                    <label text="Image"/>
                </flex-row>
                <image texture-path="cardDiamondsA" atlas="texture-region-uat.atlas"/>
                <image texture-path="cardDiamondsJ" atlas="texture-region-uat.atlas" flip-x="true" flip-y="true"/>
                <image texture-path="cardDiamondsQ" atlas="texture-region-uat.atlas" flip-x="true"/>
                <image texture-path="cardDiamondsK" atlas="texture-region-uat.atlas" flip-y="true"/>
            </div>
            <div layout="flex-column:xs-12c">
                <flex-row layout="flex-column:xs-12c">
                    <label text="Animated Image"/>
                </flex-row>
                <animated-image atlas="texture-region-uat.atlas">
                    <texture duration="0.1">cardDiamondsA</texture>
                    <texture duration="0.1">cardDiamondsJ</texture>
                    <texture duration="0.1">cardDiamondsQ</texture>
                    <texture duration="0.1">cardDiamondsK</texture>
                </animated-image>
            </div>
            <div layout="flex-column:xs-12c">
                <flex-row layout="flex-column:xs-12c">
                    <label text="Image Button"/>
                </flex-row>
                <image-button id="imageButton" atlas="texture-region-uat.atlas" layout="flex-column:xs-12c">
                    <normal-texture>cardDiamondsA</normal-texture>
                    <hover-texture flip-x="true">cardDiamondsJ</hover-texture>
                    <action-texture flip-y="true">cardDiamondsQ</action-texture>
                </image-button>
            </div>
            <div layout="flex-column:xs-12c">
                <flex-row layout="flex-column:xs-12c">
                    <label text="Button"/>
                </flex-row>
                <button id="genericButton" layout="flex-column:xs-12c">
                    <flex-row layout="flex-column:xs-2c">
                        <animated-image atlas="texture-region-uat.atlas">
                            <texture duration="0.1">cardDiamondsA</texture>
                            <texture duration="0.1">cardDiamondsJ</texture>
                            <texture duration="0.1">cardDiamondsQ</texture>
                            <texture duration="0.1">cardDiamondsK</texture>
                        </animated-image>
                    </flex-row>
                    <flex-row layout="flex-column:xs-1c"/>
                    <flex-row layout="flex-column:xs-9c">
                        <label text="Pick a card"/>
                    </flex-row>
                </button>
            </div>
        </tab>
    </tab-view>
</container>